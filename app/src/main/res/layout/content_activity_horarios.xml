<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_activity_z"
    tools:context="andreotxai.busaodadepressaoz.ActivityHorarios"
    style = "@style/MyTheme"
    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtData"
        android:id="@+id/botaoData"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignBaseline="@+id/textViewData"
        android:layout_alignBottom="@+id/textViewData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="190px"
        android:layout_height="91px"
        android:text="Próximo"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/botaoAvancar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:background="@drawable/buttonfull"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Horários:"
        android:id="@+id/textViewData"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/botaoAvancar"
        android:layout_alignEnd="@+id/botaoAvancar" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerHorarios"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horários"
        android:id="@+id/textView"
        android:layout_above="@+id/spinnerHorarios"
        android:layout_alignLeft="@+id/botaoData"
        android:layout_alignStart="@+id/botaoData" />

</RelativeLayout>
