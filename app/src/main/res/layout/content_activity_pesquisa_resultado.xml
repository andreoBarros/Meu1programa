<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:fillViewport="true">

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_pesquisa_resultado"
        tools:context="andreotxai.busaodadepressaoz.ActivityPesquisaResultado"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloDia"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:textSize="17sp"
            android:textStyle = "bold"
            android:text="dia"
            android:layout_gravity="left"
            android:layout_alignTop="@+id/tituloHora"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/tituloHora">
        </TextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="horario"
            android:layout_weight="0.50" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="horario"
            android:layout_weight="0.50"
            android:layout_gravity="right" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barraNota"
            android:mirrorForRtl="false"
            android:layout_below="@+id/tituloEmpresa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:isIndicator="true"/>

        <TextView
            android:id="@+id/textComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="odeio essa merda de desing, porque fica colocando um monte de bloqueio de merda. Editar imagem no wrd Ã© melhor que essa merda"
            android:layout_gravity="right"
            android:longClickable="false"
            android:maxLines="7"
            android:maxLength="140"
            android:layout_below="@+id/barraNota"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tituloHora"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="hora"
            android:layout_gravity="left"
            android:layout_marginTop="63dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tituloEmpresa"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:textStyle="bold"
            android:text="empresa"
            android:layout_gravity="left"
            android:textIsSelectable="false"
            android:layout_below="@+id/tituloDia"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tituloLinha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:text="Linha"
            android:layout_gravity="left"
            android:layout_below="@+id/tituloHora"
            android:layout_alignLeft="@+id/tituloHora"
            android:layout_alignStart="@+id/tituloHora"
            android:layout_alignRight="@+id/textComentario"
            android:layout_alignEnd="@+id/textComentario"
            android:textStyle="italic"
            android:textSize="14dp" />

    </RelativeLayout>
</ScrollView>